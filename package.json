{
  "name": "dmux",
  "version": "2.1.0",
  "description": "Tmux pane manager with AI agent integration for parallel development workflows",
  "type": "module",
  "author": "Justin Schroeder",
  "license": "MIT",
  "homepage": "https://github.com/justinschroeder/dmux#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinschroeder/dmux.git"
  },
  "bugs": {
    "url": "https://github.com/justinschroeder/dmux/issues"
  },
  "keywords": [
    "tmux",
    "claude",
    "ai",
    "development",
    "worktree",
    "git",
    "terminal",
    "cli"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "dmux",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "prepublishOnly": "pnpm run build",
    "prerelease": "run-s clean typecheck build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "release:minor": "bumpp minor --commit --push --tag && pnpm publish",
    "release:major": "bumpp major --commit --push --tag && pnpm publish"
  },
  "bin": {
    "dmux": "./dmux"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "react": "^18.2.0",
    "string-width": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "bumpp": "^10.2.3",
    "ink-testing-library": "^4.0.0",
    "npm-run-all2": "^8.0.4",
    "strip-ansi": "^7.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.14.0"
}
