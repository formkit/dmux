#!/bin/bash
# Display ASCII art when a new pane is created

# Orange color (ANSI 38;5;208)
ORANGE='\033[38;5;208m'
RESET='\033[0m'

echo -e "${ORANGE}"
cat << 'EOF'

████████▄    ▄▄▄▄███▄▄▄▄   ███    █▄  ▀████    ▐████▀
███   ▀███ ▄██▀▀▀███▀▀▀██▄ ███    ███   ███▌   ████▀
███    ███ ███   ███   ███ ███    ███    ███  ▐███
███    ███ ███   ███   ███ ███    ███    ▀███▄███▀
███    ███ ███   ███   ███ ███    ███    ████▀██▄
███    ███ ███   ███   ███ ███    ███   ▐███  ▀███
███   ▄███ ███   ███   ███ ███    ███  ▄███     ███▄
████████▀   ▀█   ███   █▀  ████████▀  ████       ███▄

EOF
echo -e "${RESET}"

echo "🚀 Welcome to your new dmux pane!"
echo "📝 Slug: $DMUX_SLUG"
echo "🤖 Agent: $DMUX_AGENT"
echo ""
